  <%= link_to "Dodaj nową medytację", new_meditation_path, class: 'link' %>
    <h3>Lista dodanych medytacji</h3>
  <% @meditations.each do |meditation| %>
    <br>
    <br>
    <h4><%= meditation.name %></h4>
    <%= link_to "Usuń", meditation_path(meditation), method: :delete, data: {confirm: 'Czy jesteś pewien?'}, class: "link" %> 
    <%= link_to "Edytuj", edit_meditation_path(meditation), class: 'link' %>
    <%= link_to "Osłuchaj", meditation_path(meditation), class: 'link' %>
  <% end %>